{% extends 'admin.html.twig' %}

{% block body %}
    <h3 class="page-header">Registration Details</h3>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ register.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ register.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ register.email }}</td>
            </tr>
            <tr>
                <th>Phn</th>
                <td>{{ register.phn }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ register.gender }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ register.address }}</td>
            </tr>
            <tr>
                <th>Church</th>
                <td>{{ register.church }}</td>
            </tr>
        </tbody>
    </table>

    <table>
        <tr>
        <td>
            <a href="{{ path('member_edit', { 'id': register.id }) }}" class="btn btn-sm btn-primary">Edit</a>
        </td>
            <td>&nbsp;</td>
        <td>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-sm btn-danger">
            {{ form_end(delete_form) }}
        </td>
            <td>&nbsp;</td>
            <td>
                <a href="{{ path('member_index') }}" class="btn btn-sm btn-default"><i class="fa fa-reply fa-fw"></i> Back to the list</a>
            </td>
        </tr>
    </table>
{% endblock %}
