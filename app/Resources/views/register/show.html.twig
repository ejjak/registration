{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Register</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ register.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ register.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ register.email }}</td>
            </tr>
            <tr>
                <th>Phn</th>
                <td>{{ register.phn }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ register.gender }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ register.address }}</td>
            </tr>
            <tr>
                <th>Church</th>
                <td>{{ register.church }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('member_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('member_edit', { 'id': register.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
